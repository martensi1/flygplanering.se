@page "/settings"
@model SettingsModel

@{
    ViewData["Title"] = "Dina inställningar";
    ViewData["Description"] = "Ändra vilka flygplatser du vill ska synas.";
}


<div class="text-center mt-4">
    <h1>Dina inställningar</h1>

    <div class="mt-3">
        <p>Välj nedan vilka flygplatser du vill se METAR, TAF och NOTAM för.<br />Klicka på spara-knappen när du är färdig. Dina inställningar kommer att sparas i webbläsaren</p>
    </div>

    <div class="auto-overflow-x">
        <table class="mt-5">
            <thead>
                <tr>
                    <th style="width: 40%">Flygplats</th>
                    <th style="width: 20%">METAR</th>
                    <th style="width: 20%">TAF</th>
                    <th style="width: 20%">NOTAM</th>
                </tr>
            </thead>
            <tbody id="table-airport-selection" />
        </table>
    </div>

    <div class="my-5">
        <form id="settings-form" action="/settings" method="post">
            <input asp-crsf-token />

            <button id="button-save-settings" class="cbtn cbtn-secondary mx-5 mt-4" onclick="saveSettings()">
                <i class="material-icons">lock</i>
                <span>Spara inställningar</span>
            </button>
        </form>
    </div>
</div>

<script src="~/js/settings.js" asp-append-version="true"></script>