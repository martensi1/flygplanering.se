<!DOCTYPE html>
<html lang="sv" translate="no">

<head>
    <title>@ViewData["Title"]</title>

    <meta charset="utf-8" />
    <meta name="author" content="Simon Mårtensson">
    <meta name="description" content="@ViewData["Description"]">
    <meta name="format-detection" content="telephone=no">
    <meta name="keywords" content="Briefing, flygplanering, väder, weather, NOTAM, Sweden, METAR, TAF, SWC, NSWC, låghöjdsprognos, low level forecast">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="og:locale" content="sv_SE" />
    <meta name="og:type" content="website" />
    <meta name="og:title" content="@ViewData["Title"]" />
    <meta name="og:description" content="@ViewData["Description"]" />
    <meta name="og:url" content="https://flygplanering.se" />
    <meta name="og:site_name" content="Flygplanering.se" />

    <link rel="canonical" href="https://flygplanering.se" />
    <link rel="shortlink" href="https://flygplanering.se" />

    <link rel="icon" sizes="192x192" href="/favicon.png" type="image/png" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/buttons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--
        FAVICON AND APPLE TOUCH ICON ATTRIBUTION:
        Windsock Icon (https://iconscout.com/icon/windsock-1671449) by IconScout Store (https://iconscout.com/contributors/iconscout)
    -->
</head>

<body>
    <header class="d-print-none">
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/apple-touch-icon.png" alt="Logo" width="40" height="40" />
                    <span ml-3>Flygplanering.se</span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Settings">Dina inställningar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About">Om sidan</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="content" class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted d-print-none">
        <div class="container text-center">
            &copy; 2022 - Simon Mårtensson - <a asp-area="" asp-page="/About">Användarvillkor</a> - <a asp-area="" asp-page="/About">Om sidan</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
